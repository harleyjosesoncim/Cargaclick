
<h1 class="text-2xl font-bold mb-4">Simular Frete</h1>
<%= form_with url: simulador_index_path, method: :post, local: true do %>
  <div class="mb-4">
    <label class="block text-gray-700">Origem (CEP)</label>
    <%= text_field_tag :origem, nil, class: "w-full px-4 py-2 border rounded" %>
  </div>
  <div class="mb-4">
    <label class="block text-gray-700">Destino (CEP)</label>
    <%= text_field_tag :destino, nil, class: "w-full px-4 py-2 border rounded" %>
  </div>
  <%= submit_tag "Calcular Frete", class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded" %>
<% end %>
